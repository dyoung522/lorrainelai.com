<%= turbo_frame_tag "social_links" do %>
  <%= form_with model: site_profile, url: admin_site_profile_path, data: { controller: "inline-edit" } do |form| %>
    <div class="bg-white/50 dark:bg-gray-800/50 rounded-2xl p-6 shadow-sm border border-border-light max-w-md mx-auto">
      <h3 class="text-sm font-medium text-text-primary mb-4 text-center">Social Links</h3>

      <%# Standard platforms %>
      <div class="space-y-3">
        <% SiteProfile::SOCIAL_PLATFORMS.each do |platform| %>
          <div class="flex items-center gap-2">
            <label class="w-20 text-xs text-text-muted capitalize"><%= platform.titleize %></label>
            <%= text_field_tag "site_profile[social_links][#{platform}]", site_profile.social_link(platform), class: "flex-1 px-3 py-1.5 rounded-lg border border-border bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm", placeholder: "URL" %>
          </div>
        <% end %>
      </div>

      <%# Custom platforms section %>
      <div class="mt-6 pt-4 border-t border-border-light">
        <h4 class="text-xs font-medium text-text-muted mb-3 text-center">Custom Platforms</h4>

        <% if site_profile.custom_social_platforms.any? %>
          <div class="space-y-2 mb-3">
            <% site_profile.custom_social_platforms.each do |platform| %>
              <div class="flex items-center justify-between text-sm">
                <div class="flex items-center gap-2">
                  <% if platform.icon.attached? %>
                    <%= image_tag platform.icon, class: "size-5" %>
                  <% end %>
                  <span class="text-text-secondary"><%= platform.name %></span>
                </div>
                <div class="flex gap-2">
                  <%= link_to "Edit", edit_admin_custom_social_platform_path(platform), class: "text-xs text-text-muted hover:text-dusty-rose-dark", data: { turbo_frame: "_top" } %>
                  <%= link_to "Delete", admin_custom_social_platform_path(platform), class: "text-xs text-text-muted hover:text-red-500", data: { turbo_method: :delete, turbo_confirm: "Delete '#{platform.name}'?" } %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <%= link_to "+ Add custom platform", new_admin_custom_social_platform_path, class: "block text-center text-xs text-text-muted hover:text-dusty-rose-dark", data: { turbo_frame: "_top" } %>
        <p class="text-xs text-text-muted text-center mt-2">Add platforms with custom icons (SVG/PNG)</p>
      </div>

      <div class="flex gap-2 justify-center mt-4">
        <%= form.submit "Save", class: "px-4 py-2 bg-dusty-rose hover:bg-dusty-rose-dark text-text-primary rounded-lg transition-colors text-sm cursor-pointer" %>
        <%= link_to "Cancel", root_path, class: "px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-text-primary rounded-lg transition-colors text-sm", data: { turbo_frame: "social_links" } %>
      </div>
    </div>
  <% end %>
<% end %>
