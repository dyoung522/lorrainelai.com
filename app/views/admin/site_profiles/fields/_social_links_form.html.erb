<%= turbo_frame_tag "social_links" do %>
  <%= form_with model: site_profile, url: admin_site_profile_path, data: { controller: "inline-edit custom-links" } do |form| %>
    <div class="bg-white/50 rounded-2xl p-6 shadow-sm border border-border-light max-w-md mx-auto">
      <h3 class="text-sm font-medium text-text-primary mb-4 text-center">Social Links</h3>

      <%# Standard platforms %>
      <div class="space-y-3">
        <% SiteProfile::SOCIAL_PLATFORMS.each do |platform| %>
          <div class="flex items-center gap-2">
            <label class="w-20 text-xs text-text-muted capitalize"><%= platform.titleize %></label>
            <%= text_field_tag "site_profile[social_links][#{platform}]", site_profile.social_link(platform), class: "flex-1 px-3 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm", placeholder: "URL" %>
          </div>
        <% end %>
      </div>

      <%# Custom links section %>
      <div class="mt-6 pt-4 border-t border-border-light">
        <h4 class="text-xs font-medium text-text-muted mb-3 text-center">Custom Links</h4>
        <p class="text-xs text-text-muted mb-3 text-center">Add an emoji icon (optional)</p>

        <div data-custom-links-target="container" class="space-y-3">
          <% site_profile.custom_links.each do |name, value| %>
            <% url = site_profile.custom_link_url(value) %>
            <% icon = site_profile.custom_link_icon(value) %>
            <% next if url.blank? %>
            <div class="flex items-center gap-2" data-custom-link>
              <input type="text" value="<%= icon %>" name="site_profile[social_links][<%= name %>][icon]" class="w-12 px-2 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm text-center" placeholder="ðŸ“Ž" maxlength="2">
              <input type="text" value="<%= name %>" class="w-20 px-2 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm" placeholder="Name" data-custom-name="true" onchange="updateCustomLinkNames(this)">
              <input type="text" value="<%= url %>" name="site_profile[social_links][<%= name %>][url]" class="flex-1 px-3 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm" placeholder="URL" data-custom-url="true">
              <button type="button" data-action="custom-links#remove" class="text-text-muted hover:text-red-500 text-lg">&times;</button>
            </div>
          <% end %>
        </div>

        <template data-custom-links-target="template">
          <div class="flex items-center gap-2" data-custom-link>
            <input type="text" class="w-12 px-2 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm text-center" placeholder="ðŸ“Ž" maxlength="2" data-custom-icon="true">
            <input type="text" class="w-20 px-2 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm" placeholder="Name" data-custom-name="true" onchange="updateCustomLinkNames(this)">
            <input type="text" class="flex-1 px-3 py-1.5 rounded-lg border border-border bg-white focus:outline-none focus:ring-2 focus:ring-dusty-rose text-sm" placeholder="URL" data-custom-url="true">
            <button type="button" data-action="custom-links#remove" class="text-text-muted hover:text-red-500 text-lg">&times;</button>
          </div>
        </template>

        <button type="button" data-action="custom-links#add" class="mt-3 w-full text-center text-xs text-text-muted hover:text-dusty-rose-dark">
          + Add custom link
        </button>
      </div>

      <div class="flex gap-2 justify-center mt-4">
        <%= form.submit "Save", class: "px-4 py-2 bg-dusty-rose hover:bg-dusty-rose-dark text-text-primary rounded-lg transition-colors text-sm cursor-pointer" %>
        <%= link_to "Cancel", root_path, class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 text-text-primary rounded-lg transition-colors text-sm", data: { turbo_frame: "social_links" } %>
      </div>
    </div>

    <script>
      function updateCustomLinkNames(nameInput) {
        const container = nameInput.closest('[data-custom-link]');
        const name = nameInput.value.toLowerCase().replace(/\s+/g, '_');
        const iconInput = container.querySelector('[data-custom-icon]');
        const urlInput = container.querySelector('[data-custom-url]');
        if (iconInput) iconInput.name = `site_profile[social_links][${name}][icon]`;
        if (urlInput) urlInput.name = `site_profile[social_links][${name}][url]`;
      }
    </script>
  <% end %>
<% end %>
