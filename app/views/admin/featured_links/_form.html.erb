<%= form_with model: [:admin, featured_link], class: "space-y-4" do |form| %>
  <% if featured_link.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <ul class="text-red-700 dark:text-red-400 text-sm">
        <% featured_link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-text-primary mb-1" %>
    <%= form.text_field :title,
                        class: "w-full px-4 py-2 rounded-lg border border-border focus:border-dusty-rose focus:outline-none focus:ring-2 focus:ring-dusty-rose/20",
                        placeholder: "e.g., My Blog" %>
  </div>

  <div>
    <%= form.label :url, class: "block text-sm font-medium text-text-primary mb-1" %>
    <%= form.url_field :url,
                       class: "w-full px-4 py-2 rounded-lg border border-border focus:border-dusty-rose focus:outline-none focus:ring-2 focus:ring-dusty-rose/20",
                       placeholder: "https://example.com" %>
  </div>

  <div class="flex justify-end gap-3 pt-2">
    <%= link_to "Cancel", root_path, class: "px-4 py-2 text-text-secondary hover:text-text-primary" %>
    <%= form.submit class: "px-6 py-2 bg-dusty-rose hover:bg-dusty-rose-dark text-text-primary rounded-full transition-colors cursor-pointer" %>
  </div>
<% end %>
