# Rails Encrypted Credentials Template
#
# To edit credentials, run:
#   bin/rails credentials:edit
#
# This will open the encrypted credentials file in your default editor.
# The structure below shows what keys are expected by the application.

# Substack API configuration
substack:
  api_token: your_substack_api_token_here

# Google OAuth for admin authentication
google_oauth:
  client_id: your_google_client_id_here
  client_secret: your_google_client_secret_here

# S3-compatible object storage (self-hosted in homelab)
s3:
  access_key_id: your_s3_access_key_here
  secret_access_key: your_s3_secret_access_key_here
  bucket: your_bucket_name_here
  region: us-east-1
  endpoint: https://your-s3-endpoint.com

# Secret key base is automatically included by Rails
# secret_key_base: will_be_auto_generated
